{
	"name": "Unpivot",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "csvcontainerdataset",
						"type": "DatasetReference"
					},
					"name": "source"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "csvadfdemo",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "unpivot"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as string,",
				"          dept as string,",
				"          india as string,",
				"          usa as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     partitionBy('hash', 1)) ~> source",
				"source unpivot(output(",
				"          Country_Name as string,",
				"          emp_cnt as string",
				"     ),",
				"     ungroupBy(id,",
				"          dept),",
				"     lateral: true,",
				"     ignoreNullPivots: false,",
				"     partitionBy('hash', 1)) ~> unpivot",
				"unpivot sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Name as string,",
				"          Category as string,",
				"          Status as string,",
				"          Error as string",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}